<!DOCTYPE html>
<html lang="en">

<!-- insert header -->
<%- include("./partials/head.ejs") %>

<body>
    <p>Create a new blog</p>

    <!-- insert nav.ejs navbar -->
    <%- include("./partials/nav.ejs") %>

    <form class="create-blog" style="margin: 10em auto; width: fit-content;" action="/blogs" method="post">
        <label for="title">Title </label>
        <input type="text" name="title" id="title" required />
        <br>
        <label for="snippet">Snippet </label>
        <input type="text" name="snippet" id="snippet" />
        <br>
        <label for="body">Body </label>
        <input type="text" name="body" id="body" required />
        <br>

        <button type="submit">Submit</button>
    </form>
</body>

<!-- insert footer -->
<%- include("./partials/footer.ejs") %>

</html>